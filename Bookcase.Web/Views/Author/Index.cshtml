@model IEnumerable<Bookcase.ViewModel.AuthorViewModel>

<script src="~/Scripts/DomainScripts/Author.js"></script>
<br/>
<p>
    @Html.ActionLink("Create", "Create", null, new { @class= "btn btn-default", data_toggle = "modal", data_target = "#myModal", type="button" })

</p>

<table id="grid">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Content/Authors/@item.Photo" class="customer-photo" alt=""/>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", null, new {id = item.Id}, new { @class = "btn btn-primary", data_toggle = "modal", data_target = "#myModal", type = "button" })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", null, new {id = item.Id}, new { @class = "btn btn-info", data_toggle = "modal", data_target = "#myModal", type = "button" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", null, new {id = item.Id}, new { @class = "btn btn-warning", data_toggle = "modal", data_target = "#myModal", type = "button" })
            </td>
        </tr>
    }

</table>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>
